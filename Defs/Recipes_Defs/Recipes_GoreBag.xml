<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef>
    <defName>Frankenstein_CollectGoreBag_NewMeat</defName>
    <label>(FA)collect gore bag</label>
    <description>Waste not, want not, as they say. After all, there's nothing like repurposing the deceased for a more... savory cause.</description>
    <recipeUsers>
      <li>TableButcher</li>
      <li>ButcherSpot</li>
    </recipeUsers>
    <jobString>Dissecting.</jobString>
    <workAmount>200</workAmount>
    <workSpeedStat>ButcheryFleshSpeed</workSpeedStat>
    <effectWorking>ButcherFlesh</effectWorking>
    <soundWorking>Recipe_ButcherCorpseFlesh</soundWorking>
    <uiIconThing>Meat_Muffalo</uiIconThing>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Corpses</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Corpses</li>
      </categories>
      <disallowedCategories>
        <li>CorpsesAnimal</li>
        <li>CorpsesInsect</li>
        <li>CorpsesMechanoid</li>
      </disallowedCategories>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>CorpsesHumanlike</li>
      </categories>
    </defaultIngredientFilter>
    <products>
      <Frankenstein_GoreBag>150</Frankenstein_GoreBag>
    </products>
  </RecipeDef>
  
</Defs>
